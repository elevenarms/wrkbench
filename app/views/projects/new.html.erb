<fieldset>
  <legend>New Project</legend>
<% form_for@project , :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :name %>
  </p>

    <p>
    <%= f.label :summary %><br />
    <%= f.text_area :description %>
  </p>
  
<p>
    
  </p>
		<%= f.label :image %><br />
     
	  <%= f.file_field :main_image %>
  <p>
    <%= f.submit "Save", :class => 'button positive' %> or <em><%= link_to 'Cancel', projects_path %><br /></em>
  </p>
<% end %>
</fieldset>